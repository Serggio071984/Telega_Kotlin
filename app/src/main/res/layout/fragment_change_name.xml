<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Fragments.ChangeNameFragment">

    <EditText
        android:id="@+id/settings_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/editRegisterText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:hint="@string/settings_hint_enter_name"/>

    <EditText
        android:id="@+id/settings_input_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/editRegisterText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_input_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:hint="@string/settings_hint_enter_surname"/>



</androidx.constraintlayout.widget.ConstraintLayout>